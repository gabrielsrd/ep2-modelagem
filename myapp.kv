<Example>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BoxLayout:
            size_hint_y: None
            height: 50
            Label:
                text: "MAC0209 - EP2"
                font_size: 24
                bold: True


        TabbedPanel:
            do_default_tab: False

            TabbedPanelItem:
                text: "Grupo" 

                BoxLayout:
                    orientation: "vertical"
                    spacing: 10
                    padding: 10


                    Label:
                        text: "Integrantes do grupo"
                        font_size: 20
                        bold: True
                        valign: "middle"
                        size_hint_y: .2

                    Button:
                        id: show_button
                        text: "Clique aqui para revelar os membros do grupo"
                        on_release: root.show_button()
                        size_hint_y: .2
                        size_hint_x: .5
                        pos_hint: {"center_x": 0.5}

                    Label:
                        id: label 
                        multiline: True
                        valign: "middle"
                        text: ""
                        
        
            TabbedPanelItem:
                text: "Tab 2"
